<%- include('partial/header') %>

<style>
  body {
    margin: 0;
    padding: 0;
    background-color: #ffffff;
    font-family: 'Segoe UI', sans-serif;
  }

  .contact-page-wrapper {
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 3rem 1rem;
  }

  .contact-section {
    background: white;
    border-radius: 15px;
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
    max-width: 1100px;
    width: 100%;
    padding: 2rem;
  }

  .contact-form h2 {
    color: #ff5436;
    margin-bottom: 1.5rem;
  }

  .form-control:focus {
    box-shadow: none;
    border-color: #69bafc;
  }

  .btn-primary {
    background-color: #69bafc;
    border: none;
  }

  .btn-primary:hover {
    background-color: #69bafc;
  }

  .lottie-wrapper {
    display: flex;
    align-items: center;
    justify-content: center;
  }

  @media (max-width: 768px) {
    .lottie-wrapper {
      margin-top: 2rem;
    }
  }
  .toast-container {

position: fixed;
top: 20px;
right: 20px;
z-index: 9999;
}
.toast-custom-success {
background-color: #004ffa; /* Bootstrap success green */
color: white;
font-weight: bold;
}
</style>
<% if (message) { %>
  <div class="toast-container">
    <div id="toastMessage" class="toast toast-custom-success border-0" role="alert" aria-live="assertive" aria-atomic="true">
      <div class="d-flex">
        <div class="toast-body">
          <%= message %>
        </div>
        <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
      </div>
    </div>
  </div>
  
<% } %>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script>
  // Show toast automatically if message exists
  const toastEl = document.getElementById('toastMessage');
  if (toastEl) {
    const toast = new bootstrap.Toast(toastEl, { delay: 4000 });
    toast.show();
  }
</script>
<!-- Lottie Player Script -->
<script src="https://unpkg.com/@dotlottie/player-component@2.7.12/dist/dotlottie-player.mjs" type="module"></script>

<div class="contact-page-wrapper">
  <div class="container contact-section">
    <div class="row align-items-center">
      <!-- Contact Form -->
      <div class="col-md-6">
        <div class="contact-form">
          <h2 class="text-center">Contact Us</h2>
          <form method="post" action="/contact/create">
            <div class="mb-3">
              <label for="name" class="form-label">Your Name</label>
              <input type="text" class="form-control" id="name" placeholder="Enter your name" name="name" required>
            </div>

            <div class="mb-3">
              <label for="email" class="form-label">Email address</label>
              <input type="email" class="form-control" id="email" name="email" placeholder="name@example.com" required>
            </div>

            <div class="mb-3">
              <label for="subject" class="form-label">Subject</label>
              <input type="text" class="form-control" id="subject" placeholder="Subject" name="subject" required>
            </div>
            <div class="mb-3">
              <label for="phone" class="form-label">Phone</label>
              <input type="text" class="form-control" id="phone" placeholder="phone" name="phone" required>
            </div>

            <div class="mb-3">
              <label for="message" class="form-label">Message</label>
              <textarea class="form-control" id="message" rows="5" placeholder="Your message here..." name="message" required></textarea>
            </div>

            <div class="d-grid">
              <button type="submit" class="btn btn-primary">Send Message</button>
            </div>
          </form>
        </div>
      </div>

      <!-- Lottie Animation -->
      <div class="col-md-6 lottie-wrapper">
        <dotlottie-player
          src="https://lottie.host/5cc54dd5-f4db-412f-959d-0da91b9049bd/zra1m6Fnr0.lottie"
          background="transparent"
          speed="1"
          style="width: 100%; max-width: 400px; height: 400px"
          loop
          autoplay>
        </dotlottie-player>
      </div>
    </div>
  </div>
</div>

<%- include('partial/footer') %>
