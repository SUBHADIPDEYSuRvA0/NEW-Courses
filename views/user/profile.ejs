<script>
    function shareReferralCode() {
        const referralCode = "<%= me && me.myReferralCode ? me.myReferralCode : '' %>";
        const referredBy = "<%= me && me.name ? me.name : '' %>";
    
        if (!referralCode || !referredBy) {
